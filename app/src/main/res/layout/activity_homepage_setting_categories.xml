<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage.settingCategories.Homepage_SettingCategories"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Setting_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Setting"
        android:textSize="25sp"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="35sp" />


    <LinearLayout
        android:id="@+id/setting_userprofile_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/setting_userprofile_icon"
            android:src="@drawable/ic_baseline_settings_24"/>

        <TextView
            android:id="@+id/setting_userprofile_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="User Profile"
            android:textSize="25sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_account_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/setting_account_icon"
            android:src="@drawable/ic_baseline_settings_24"/>

        <TextView
            android:id="@+id/setting_account_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Account setting"
            android:textSize="25sp"/>

    </LinearLayout>

</LinearLayout>