<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intro.WelcomePage"
    android:background="@color/white">

    <Button
        android:id="@+id/toLoginPagebtnMain"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_corner"
        android:text="login"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginTextMain"
        app:layout_constraintWidth_percent="1.0" />

    <Button
        android:id="@+id/toRegPagebtnMain"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_corner"
        android:layout_gravity="center_horizontal"
        android:text="register now"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerTextMain"
        app:layout_constraintWidth_percent="1.0" />

    <ImageView
        android:id="@+id/welcomeImageMain"
        android:layout_width="334dp"
        android:layout_height="159dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_baseline_thumb_up_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="1.0"
        tools:src="@tools:sample/backgrounds/scenic"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/registerTextMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="New to RecipEZ?"
        android:textColor="@color/lightblue"
        android:textSize="24sp"
        app:autoSizeMaxTextSize="45sp"
        app:autoSizeMinTextSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toLoginPagebtnMain"
        app:layout_constraintWidth_percent="1.0" />

    <TextView
        android:id="@+id/loginTextMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="Welcome!"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="@color/lightblue"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeMinTextSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeImageMain"
        app:layout_constraintWidth_percent="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>